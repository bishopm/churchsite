{
    "name": "bishopm/churchsite",
    "type": "library",
    "description": "Laravel-based website builder for local churches using the ChurchNet API",
    "keywords": [
        "church",
        "website"
    ],
    "homepage": "https://github.com/bishopm/churchsite",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Bishop",
            "email": "admin@church.net.za",
            "homepage": "https://github.com/bishopm",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "5.*",
        "jeroennoten/laravel-adminlte":"1.*",
        "laravelcollective/html": "5.*",
        "guzzlehttp/guzzle": "6.*",
        "tymon/jwt-auth": "1.*",
        "barryvdh/laravel-cors": "0.11.*",
        "spatie/laravel-view-models": "1.*",
        "spatie/laravel-tags": "2.*",
        "bishopm/laravel-menu": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Bishopm\\Churchsite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bishopm\\churchsite\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "post-install-cmd": [
            "ln -sr storage/app/public public/storage"
        ],
        "post-package-update": [
            "php artisan vendor:publish",
            "php artisan migrate"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Bishopm\\Churchsite\\Providers\\ChurchsiteServiceProvider"
            ]
        }
    }
}
